extends layout

block vars
  - var title = 'Законопроекты';

block content
    .index-block
        .container_12
            .grid_12
                .index-slider.js-slider
                    a(href="#").index-arrow.a-left.js-prev
                    a(href="#").index-arrow.a-right.js-next
                    .js-fotorama
                        each i in [4,5,6]
                            img(src="images/tmp/indexslider_1.jpg" data-caption="Николай Левичев подвел итоги 201#{i} года")
            .clearfix
    .main-content.index-content
        .container_12
            .grid_8
                .min-title
                    a(href="news.html") Новости
                ul.main-feed
                    each i in [0,1]
                        li.feed-item
                            .feed-date 24 декабря 2015
                            a(href="news_one.html").feed-title О внесении изменений в Федеральный закон<br>“О противодействии коррупции”
                            .feed-desc
                                img(src="images/tmp/newsmin_1.jpg")
                                span Надо напомнить Правительству, что в нашей огромной Родине во многие тысячи населенных пунктов, в которых зачастую живут далеко не самые богатые люди, можно попасть только поездами. И отмена электричек - не только ограничение конституционного права граждан на свободу передвижые богатые люди, можно попасть только поездами. И отмена электричек - не толени ...
                                .clearfix
                .law-block
                    .section-title Законопроекты
                    a(href="#").feed-title О внесении изменений в статью 1.1 Федерального закона “О днях воинской славы и памятных датах России”
                    .law-desc Об установлении памятной даты России “3 декабря - День Неизвестного Солдата”
                .min-title
                    a(href="photo_albums") Фото
                .in-content
                    ul.album-list
                        each i in [1,2]
                            li.album-item.photo-item
                                a(href="photos.html").album-photo(style="background-image: url(../images/tmp/gallery_#{i}.jpg)")
                                .album-info
                                    .info-date 22 декабря 2014
                                    .info-title
                                        a(href="photos.html").title-link Николай Левичев в эфире телеканала “Россия-24”
                                    .info-amount 53 фото
                .min-title
                    a(href="audio.html") Аудио
                ul.main-feed
                    li.feed-item.js-audio-cont.js-audio-opened
                        .feed-date 24 декабря 2015
                        a(href="#").feed-title.js-audio-open О внесении изменений в Федеральный закон<br>“О противодействии коррупции”
                        .audio-cont.js-audio <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/183724785&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
            .grid_4
                .min-title Видео
                ul.album-list.search-albums
                    li.album-item.video-item
                        a(href="photos.html").album-photo(style="background-image: url(../images/tmp/gallery_2.jpg)")
                        .album-info
                            .info-date
                                span.info-type Видео
                                span 22 декабря 2014
                            .info-title
                                a(href="photos.html").title-link Николай Левичев в эфире телеканала “Россия-24”
                .min-title Facebook
                .soc-block
                .min-title Twitter
            .clearfix
